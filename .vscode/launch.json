    "version": "0.2.0",
    "configurations":  [
        {
            "name": "Python: Odoo",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
           
            "console": "integratedTerminal",
            
            "program": "${workspaceRoot}/odoo/odoo-bin",
            "args": [
                "--config=${workspaceRoot}/config/odoo.conf",
                "--dev=xml",
            ],
            "cwd": "${workspaceRoot}",

        }
    ]
}